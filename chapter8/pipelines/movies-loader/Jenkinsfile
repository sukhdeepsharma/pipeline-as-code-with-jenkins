def imageName = 'mlabouardy/movies-loader'
 
node('workers'){
    stage('Checkout'){
        checkout scm
    }
 
    stage('Unit Tests'){
        dir("${WORKSPACE}/chapter8/pipelines/movies-loader") {
            def imageTest= docker.build("${imageName}-test","-f Dockerfile.test .")
            imageTest.inside{
                sh 'python test_main.py'
            }
        }
    }
}
